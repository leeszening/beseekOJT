rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /journal_covers/{journal_id}/{fileName} {
      allow read;
      allow write: if request.auth != null && 
                   get(/databases/$(database)/documents/travelJournals/$(journal_id)).data.user_id == request.auth.uid;
    }
  }
}
